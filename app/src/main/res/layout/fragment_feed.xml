<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fab="http://schemas.android.com/apk/res-auto"
    android:id="@+id/svScroll"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:fillViewport="true"
    android:background="@color/material_drawer_hint_text">

    <!--
    <android.support.v4.widget.SwipeRefreshLayout
        android:id="@+id/swipe_container"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="match_parent">

        -->

        <com.github.ksoichiro.android.observablescrollview.ObservableRecyclerView

            android:id="@+id/scroll"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="vertical" />

        <RelativeLayout
            android:id="@+id/layoutMenu"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true">

            <com.getbase.floatingactionbutton.FloatingActionsMenu
                android:id="@+id/multiple_actions"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                fab:fab_addButtonColorNormal="@android:color/white"
                fab:fab_addButtonColorPressed="@android:color/white"
                fab:fab_addButtonPlusIconColor="@color/half_black"
                fab:fab_labelStyle="@style/menu_labels_style"
                fab:fab_addButtonSize="normal"
                android:layout_marginBottom="1dp"
                android:layout_marginRight="16dp"
                android:layout_marginEnd="1dp">

                <com.getbase.floatingactionbutton.FloatingActionButton
                    android:id="@+id/action_youtube"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    fab:fab_colorNormal="#ffffff"
                    fab:fab_size="mini"

                    fab:fab_colorPressed="#ffffff"
                    android:layout_marginBottom="-15dp"
                    fab:fab_title="Youtube" />

                <com.getbase.floatingactionbutton.FloatingActionButton
                    android:id="@+id/action_soundcloud"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    fab:fab_colorNormal="#ffffff"
                    fab:fab_size="mini"

                    fab:fab_colorPressed="#ffffff"
                    fab:fab_title="SoundCloud" />

                <com.getbase.floatingactionbutton.FloatingActionButton
                    android:id="@+id/action_photo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    fab:fab_colorNormal="#ffffff"
                    fab:fab_size="mini"
                    android:layout_marginBottom="-15dp"
                    fab:fab_colorPressed="#ffffff"
                    fab:fab_title="Post Photo" />

                <com.getbase.floatingactionbutton.FloatingActionButton
                    android:id="@+id/action_video"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    fab:fab_colorNormal="#ffffff"
                    fab:fab_size="mini"
                    fab:fab_colorPressed="#ffffff"
                    android:layout_marginBottom="-15dp"
                    fab:fab_title="Post Video" />

                <com.getbase.floatingactionbutton.FloatingActionButton
                    android:id="@+id/action_write_post"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    fab:fab_colorNormal="#ffffff"
                    fab:fab_size="mini"
                    android:layout_marginBottom="-15dp"
                    fab:fab_colorPressed="#ffffff"
                    fab:fab_title="Write Post" />

            </com.getbase.floatingactionbutton.FloatingActionsMenu>

        </RelativeLayout>

   <!-- </android.support.v4.widget.SwipeRefreshLayout> -->

</RelativeLayout>

