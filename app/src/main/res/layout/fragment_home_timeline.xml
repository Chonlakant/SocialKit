<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fab="http://schemas.android.com/apk/res-auto"
    android:id="@+id/svScroll"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:fillViewport="true">

    <RelativeLayout
        android:id="@+id/fragment_container"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/cardList"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />


    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/layoutMenu"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true">

        <com.getbase.floatingactionbutton.FloatingActionsMenu
            android:id="@+id/multiple_actions"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"

            fab:fab_addButtonSize="normal"
            android:layout_marginBottom="1dp"
            android:layout_marginRight="16dp"
            android:layout_marginEnd="1dp">

            <com.getbase.floatingactionbutton.FloatingActionButton
                android:id="@+id/action_d"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                fab:fab_colorNormal="#ffffff"
                fab:fab_size="mini"

                fab:fab_colorPressed="#ffffff"
                android:layout_marginBottom="-10dp"
                fab:fab_title="Youtube" />

            <com.getbase.floatingactionbutton.FloatingActionButton
                android:id="@+id/action_e"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                fab:fab_colorNormal="#ffffff"
                fab:fab_size="mini"

                fab:fab_colorPressed="#ffffff"
                fab:fab_title="SoundColud" />

            <com.getbase.floatingactionbutton.FloatingActionButton
                android:id="@+id/action_f"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                fab:fab_colorNormal="#ffffff"
                fab:fab_size="mini"
                android:layout_marginBottom="-10dp"

                fab:fab_colorPressed="#ffffff"
                fab:fab_title="Image" />

            <com.getbase.floatingactionbutton.FloatingActionButton
                android:id="@+id/action_g"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                fab:fab_colorNormal="#ffffff"
                fab:fab_size="mini"

                fab:fab_colorPressed="#ffffff"
                android:layout_marginBottom="-10dp"
                fab:fab_title="Camera" />

            <com.getbase.floatingactionbutton.FloatingActionButton
                android:id="@+id/action_h"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                fab:fab_colorNormal="#ffffff"
                fab:fab_size="mini"
                android:layout_marginBottom="-10dp"

                fab:fab_colorPressed="#ffffff"
                fab:fab_title="Write Post" />

        </com.getbase.floatingactionbutton.FloatingActionsMenu>

    </RelativeLayout>


</RelativeLayout>