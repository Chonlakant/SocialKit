<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="วิธีการชำระเงิน"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RadioButton
            android:textStyle="bold"
            android:textSize="18dp"
            android:id="@+id/radio_credit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="บัตรเครดิตหรือเดบิต" />

        <LinearLayout
            android:id="@+id/view_credit"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone">

            <ImageView
                android:layout_marginLeft="32dp"
                android:id="@+id/imageView2"
                android:layout_width="60dp"
                android:layout_height="30dp"
                android:background="@drawable/visa" />

            <EditText
                android:layout_marginLeft="32dp"
                android:id="@+id/editText"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" />

            <EditText
                android:layout_marginLeft="32dp"
                android:id="@+id/editText2"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" />

            <EditText
                android:layout_marginLeft="32dp"
                android:id="@+id/editText3"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:orientation="horizontal">

                <Spinner
                    android:layout_marginLeft="32dp"
                    android:id="@+id/spinner"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />

                <Spinner
                    android:layout_marginLeft="32dp"
                    android:id="@+id/spinner2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">

                <RadioButton
                    android:textStyle="bold"
                    android:textSize="18dp"
                    android:id="@+id/radio_paypal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Paypal" />

                <ImageView
                    android:id="@+id/imageView3"
                    android:layout_width="60dp"
                    android:layout_height="30dp"
                    android:background="@drawable/paypal" />
            </LinearLayout>


            <LinearLayout
                android:id="@+id/view_paypla"
                android:visibility="gone"
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="13dp"
                    android:layout_marginLeft="32dp"
                    android:text="You will be redirected to the PayPal system"
                    android:id="@+id/textView6" />


                    <CheckBox
                        android:layout_marginLeft="32dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="คลิกที่นี่ถ้าคุณต้องการชำระเงินกับ Amex"
                        android:id="@+id/checkBox" />

                <TextView
                    android:layout_marginLeft="32dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="13dp"
                    android:text="PayPal คืออะไร?"
                    android:id="@+id/textView7" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">

                <RadioButton
                    android:textStyle="bold"
                    android:textSize="18dp"
                    android:id="@+id/radio_bank"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="หักบัญชีธนาคาร/เอทีเอ็ม" />
            </LinearLayout>


            <LinearLayout
                android:id="@+id/view_bank"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone">


                <TextView
                    android:layout_marginLeft="32dp"
                    android:id="@+id/textView4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ชำระเงินผ่านบริการออนไลน์หรือผ่านช่องทางATM"
                    android:textSize="13dp" />

                <Spinner
                    android:layout_marginLeft="32dp"
                    android:id="@+id/spinner3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:layout_marginLeft="32dp"
                    android:id="@+id/textView5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ชำระเงินอย่างง่ายๆปลอดภัยด้วยวิธีการชำระเงินแบบออนไลน์ผ่านบัญชีธนาคารที่คุณใช้้ผ่านATM"
                    android:textSize="13dp"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>


    <Button
        android:id="@+id/btn_add"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginTop="40dp"
        android:background="@color/md_green_800"
        android:text="ดำเนินการต่อ"
        android:textColor="@android:color/white"
        android:textSize="13dp" />


</LinearLayout>
