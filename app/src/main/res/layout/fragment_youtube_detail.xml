<?xml version="1.0" encoding="utf-8"?>

<com.github.ksoichiro.android.observablescrollview.ObservableScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/scroll"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:fillViewport="true"
    android:overScrollMode="never">

    <LinearLayout
        android:orientation="vertical" android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/iv_thumbnail"
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:scaleType="centerCrop"/>

        <LinearLayout
            android:id="@+id/youtube_detail"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/md_icon_margin"
                android:layout_marginRight="@dimen/md_icon_margin"
                android:layout_marginTop="@dimen/md_icon_margin">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="Cool video title"
                    android:id="@+id/video_title"
                    android:linksClickable="true"
                    android:textSize="19dp"
                    android:textColor="#252525" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="2560 views"
                    android:textColor="@color/material_drawer_dark_hint_text"
                    android:id="@+id/view"
                    android:textSize="10sp"
                    android:layout_weight="2"
                    android:gravity="right" />

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="24dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:text="3"
                        android:gravity="center"
                        android:textColor="@color/material_drawer_dark_hint_text"
                        android:layout_marginLeft="@dimen/margin_size_layout_small"
                        android:id="@+id/love"
                        android:textSize="13dp" />

                    <ImageView
                        android:layout_width="25dp"
                        android:layout_height="25dp"

                        android:layout_marginLeft="@dimen/margin_size_layout_small"
                        android:id="@+id/imageView2" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:text="2"
                        android:textColor="@color/material_drawer_dark_hint_text"
                        android:id="@+id/share"
                        android:gravity="center"
                        android:layout_marginLeft="@dimen/margin_size_layout_small"
                        android:textSize="13dp" />

                    <ImageView
                        android:layout_width="25dp"
                        android:layout_height="25dp"

                        android:id="@+id/imageView3"
                        android:layout_marginLeft="@dimen/margin_size_layout_small" />
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/padding_size_layout_medium"
                android:paddingRight="@dimen/padding_size_layout_medium"
                android:gravity="top">


                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:id="@+id/imageView10"
                    android:gravity="center"
                    android:src="@drawable/profile" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_marginLeft="@dimen/margin_size_layout_medium">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="14sp"
                        android:text="Your Cool Name"
                        android:textColor="#252525"
                        android:id="@+id/name" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="6,920 subscribers"
                        android:id="@+id/ago"
                        android:textSize="10sp"
                        android:gravity="center"
                        android:textColor="#9497A3" />

                </LinearLayout>

                <Button
                    style="?android:attr/buttonStyleSmall"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:text="FOLLOW"
                    android:id="@+id/button3"
                    android:layout_marginTop="-10dp" />

            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Suggestions"
                android:id="@+id/suggestion"
                android:layout_margin="10dp"
                android:textColor="#666" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:id="@+id/suggestion_container"></LinearLayout>


        </LinearLayout>




    </LinearLayout>
</com.github.ksoichiro.android.observablescrollview.ObservableScrollView>



